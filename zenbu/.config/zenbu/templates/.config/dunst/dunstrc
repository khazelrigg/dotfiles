[global]
    ### Display ###

    monitor = 0
    follow = keyboard
    geometry = "300x5-30+20"
    indicate_hidden = yes
    shrink = no
    transparency = 0
    notification_height = 0
    separator_height = 2
   
    # --- Padding ---
    padding = 10
    horizontal_padding = 8
    
    # --- Frame --- 
    frame_width = 1
    frame_color = "#6f6f6f"

    separator_color = auto
    sort = yes

    idle_threshold = 120

    ### Text ###

    font = scientifica 11

    line_height = 0

    markup = full

    format = "<b>%s</b>\n%b"

    alignment = left
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no

    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    ### Icons ###

    icon_position = left
    max_icon_size = 125
    icon_folders = /usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/

    sticky_history = yes
    history_length = 20

    dmenu = /usr/bin/dmenu -p dunst:

    # Browser for opening urls in context menu.
    browser = /usr/bin/firefox -new-tab

    always_run_script = true

    title = Dunst
    class = Dunst
    startup_notification = false

    force_xinerama = false

[experimental]
    per_monitor_dpi = false

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space

    history = ctrl+grave

    context = ctrl+shift+period

[urgency_low]
    background = "#{{ bgc }}"
    foreground = "#{{ fgc }}"
    timeout = 10
    #icon = /path/to/icon

[urgency_normal]
    background = "#{{ bgc }}"
    foreground = "#{{ fgc }}"
    timeout = 10
    #icon = /path/to/icon

[urgency_critical]
    background = "#{{ bgc }}"
    foreground = "#{{ n_red }}"
    frame_color = "#{{ b_red }}"
    timeout = 0
    #icon = /path/to/icon

