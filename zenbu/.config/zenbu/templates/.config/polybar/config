[module/bspwm]
type = internal/bspwm
enable-click = false

format-padding = 4
format = <label-state>
label-focused = %icon:3%
ws-icon-0 = I;trm
ws-icon-1 = II;web
ws-icon-2 = III;ide
ws-icon-default = ws

label-occupied =
label-empty =

format-background = {{ b_black }}

[module/date]
type = internal/date
time = %H:%M
label = %time%

[module/mpd]
type = internal/mpd
host = localhost
port = 6600
format-online = <label-song> <toggle>
icon-play = ⏵
icon-pause = ⏸

[module/vpn]
type = custom/script
exec = ~/.config/polybar/vpnCheck.sh
interval = 5
format = <label>
format-underline = {{ n_red }}
click-left = firefox https://www.privateinternetaccess.com/pages/whats-my-ip/
